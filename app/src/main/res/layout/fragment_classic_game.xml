<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/background">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        android:layout_marginVertical="10dp">

        <TextView
            android:id="@+id/currentQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            />


        <SeekBar
            android:id="@+id/progress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:max="100"
            android:progress="0"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10dp"
            android:progressBackgroundTint="@color/progress_background"
            android:progressTint="@color/progress_background"
            android:thumbTint="@color/button_primary"
            android:clickable="false"
            android:contextClickable="false" />

        <TextView
            android:id="@+id/questionCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="@color/text_primary"
            android:textStyle="bold"/>

    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@android:color/transparent"
        android:layout_marginHorizontal="25dp"
        app:contentPadding="25dp"
        app:cardMaxElevation="50dp"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:visibility="gone"
                />

            <ImageView
                android:id="@+id/questionImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/flag"
                android:maxHeight="250dp"
                android:background="@android:color/white"
                android:visibility="gone"/>


            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="4dp"
                android:textAlignment="center"
                />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/textOptionLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <Button
            android:id="@+id/optionA"
            style="@style/Button.Answer"/>

        <Button
            android:id="@+id/optionB"
            style="@style/Button.Answer"/>

        <Button
            android:id="@+id/optionC"
            style="@style/Button.Answer"/>
        <Button
            android:id="@+id/optionD"
            style="@style/Button.Answer"/>
    </LinearLayout>

    <GridLayout
        android:id="@+id/imageOptionLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:layout_marginHorizontal="25dp"
        android:columnOrderPreserved="true"
        android:visibility="gone"
        >
        <ImageView
            android:id="@+id/imageOptionA"
            android:src="@drawable/flag"
            style="@style/Button_ImageOption"/>
        <ImageView
            android:id="@+id/imageOptionB"
            android:src="@drawable/flag"
            style="@style/Button_ImageOption" />
        <ImageView
            android:id="@+id/imageOptionC"
            android:src="@drawable/flag"
            style="@style/Button_ImageOption"/>
        <ImageView
            android:id="@+id/imageOptionD"
            android:src="@drawable/flag"
            style="@style/Button_ImageOption"/>
    </GridLayout>


</LinearLayout>